<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_number_green_1" />

    <Button
        android:id="@+id/btn_digital_indicator_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start" />

    <Button
        android:id="@+id/btn_digital_indicator_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset" />

    <com.example.enzo.practicedemos.Views.DigitalIndicatorLayout
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" />

    <Button
        android:id="@+id/btn_add_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="ADD IMG" />

    <com.example.enzo.practicedemos.Views.DigitalIndicatorLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" />
    <EditText
        android:id="@+id/editText"
        android:hint="Enter N"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_change"
        android:text="Change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
