<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.PropertyAnimationActivity">

    <Button
        android:id="@+id/btn_value_animator"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="ValueAnimator"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_property_animator"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="PropertyAnimator"
        android:textAllCaps="false"
        android:layout_below="@id/btn_value_animator"/>

    <Button
        android:id="@+id/btn_customized_animator"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="CustomizedAnimator"
        android:layout_below="@id/btn_property_animator"
        android:textAllCaps="false"/>

</RelativeLayout>
