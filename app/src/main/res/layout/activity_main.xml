<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".Activities.MainActivity">


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_create_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Create Service"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_drag_and_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_create_service"
        android:text="Drag and Drop"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_base_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_drag_and_drop"
        android:text="Baseadapter"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_drag_and_drop"
        android:layout_toRightOf="@id/btn_base_adapter"
        android:text="Animation"
        android:textAllCaps="false"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_swipe_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_animation"
        android:text="Swipe View"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_OverScroller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_animation"
        android:layout_toRightOf="@id/btn_swipe_view"
        android:text="OverScroller"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_tool_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_swipe_view"
        android:text="Tool Bar"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_drawer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_swipe_view"
        android:layout_toRightOf="@id/btn_tool_bar"
        android:text="Drawer Layout"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_header_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_tool_bar"
        android:text="Header Footer"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_data_binding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_tool_bar"
        android:layout_toRightOf="@id/btn_header_footer"
        android:text="Binding"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_drawer_pager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_header_footer"
        android:text="Drawer Pager"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_sqlite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_header_footer"
        android:layout_toRightOf="@id/btn_drawer_pager"
        android:text="SQLite"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>


    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_content_provider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_drawer_pager"
        android:text="Content Provider"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_shared_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_content_provider"
        android:text="Shared Preferences"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_activity_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_shared_preferences"
        android:text="Activity Translate"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_pulltorefresh_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_activity_translate"
        android:text="PullToRefresh ListView"
        android:layout_margin="5dp"
        app:bootstrapBrand="success"
        app:bootstrapSize="lg"
        app:buttonMode="regular"
        app:roundedCorners="true"
        app:showOutline="false"/>
</RelativeLayout>
